{
  "name": "kua",
  "version": "1.0.13",
  "description": "",
  "main": "index.js",
  "scripts": {
    "lint": "eslint *.js src/**/*.js",
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "build": "babel src --out-dir lib",
    "build:watch": "chokidar 'src/**/*.js' -c 'npm run build'",
    "upgrade": "ncu -a"
  },
  "directories": {
    "bin": "./bin"
  },
  "files": [
    "lib",
    "bin",
    "index.js"
  ],
  "babel": {
    "presets": [
      "latest",
      "stage-2"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "eslintConfig": {
    "env": {
      "jest": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "sourceType": "module",
      "allowImportExportEverywhere": false
    },
    "extends": [
      "airbnb",
      "plugin:import/errors",
      "plugin:import/warnings"
    ],
    "rules": {
      "semi": [
        2,
        "never"
      ],
      "no-multiple-empty-lines": [
        2,
        {
          "max": 1,
          "maxBOF": 0,
          "maxEOF": 1
        }
      ],
      "newline-per-chained-call": "off",
      "default-case": "off",
      "new-cap": "off",
      "arrow-body-style": "off",
      "import/order": [
        "error",
        {
          "newlines-between": "always"
        }
      ],
      "import/prefer-default-export": "off",
      "import/no-dynamic-require": "off",
      "import/no-named-default": "off",
      "global-require": "off",
      "generator-star-spacing": "off",
      "class-methods-use-this": "off",
      "no-restricted-syntax": [
        "error",
        "ForInStatement",
        "LabeledStatement",
        "WithStatement"
      ]
    }
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-eslint": "^7.1.0",
    "chokidar-cli": "^1.2.0",
    "eslint": "^3.9.1",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^3.0.1",
    "eslint-plugin-react": "^6.6.0",
    "jest-cli": "^17.0.0",
    "npm-check-updates": "^2.8.6"
  },
  "dependencies": {
    "babel-polyfill": "^6.16.0",
    "babel-preset-latest": "^6.16.0",
    "babel-preset-stage-2": "^6.18.0",
    "babel-register": "^6.18.0",
    "bluebird": "^3.4.6",
    "chokidar": "^1.6.1",
    "daemonize2": "^0.4.2",
    "deep-extend": "^0.4.1",
    "glob": "^7.1.1",
    "inflection": "^1.10.0",
    "js-yaml": "^3.6.1",
    "object-path": "^0.11.2",
    "optimist": "^0.6.1",
    "ramda": "^0.22.1",
    "uuid": "^2.0.3"
  }
}
